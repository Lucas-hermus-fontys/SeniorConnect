@using Web.DTO.DiscussionForm
@model Web.DTO.DiscussionForm.DiscussionFormDTO
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


<div class="container mt-4">

    <div class="card mb-4">
        <div class="card-header">
            <h5>
                <small>Heeft U een vraag, of een interessant onderwerp?</small>
                <a class="btn btn-link text-decoration-none" data-toggle="collapse" href="#createPostForm" role="button" aria-expanded="false" aria-controls="createPostForm">
                    Maak een gespreksformulier
                </a>
            </h5>
        </div>
        <div id="createPostForm" class="collapse">
            <div class="card-body">
                <form method="post" id="createDiscussionForm" action="/Discussionform/Create">
                    <div class="form-group">
                        <label for="postTitle">Titel</label>
                        <input type="text" id="postTitle" name="Title" class="form-control" placeholder="Enter your post title" required>
                    </div>
                    <div class="form-group">
                        <label for="postDescription">Omschrijving</label>
                        <textarea id="postDescription" name="Description" class="form-control" rows="4" placeholder="Write something..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Versturen</button>
                </form>
            </div>
        </div>
    </div>


    @foreach (FormDTO form in Model.Forms)
    {
        <div class="card post-card">
            <div class="card-body">
                <div class="post-header">
                    <img src="@(form.User.ProfileImageUrl ?? "https://upload.wikimedia.org/wikipedia/commons/7/7c/Profile_avatar_placeholder_large.png?20150327203541")" alt="">
                    <div>
                        <strong>@form.User.DisplayName</strong>
                        <small class="text-muted">@form.DisplayDate</small>
                    </div>
                </div>
                <div class="post-body">
                    <h5>@form.Title</h5>
                    <p>@form.Description</p>
                </div>
                <div class="post-footer">
                    <button class="btn btn-outline-secondary btn-sm" onclick="toggleReplyInput('form' + @form.Id)">Reply</button>
                    <div id="reply-input-form@(form.Id)" class="reply-input w-100">
                        <textarea class="form-control" placeholder="Write your reply..."></textarea>
                        <button class="btn btn-primary btn-sm mt-2" onclick="submitReply(@form.Id)">Submit</button>
                    </div>
                </div>

                <div class="comment-section">

                    @if (form.Comments.Any())
                    {
                        <partial name="_CommentPartial" model="form.Comments.First()"/>
                    }

                    <!-- Collapsible Comments -->

                    <div id="comment-collapse-@form.Id" class="collapse">

                        @foreach (CommentDTO comment in form.Comments.Skip(1))
                        {
                            <partial name="_CommentPartial" model="comment"/>
                        }
                    </div>
                    @if (form.Comments.Count > 1)
                    {
                        <div class="collapse-btn" data-toggle="collapse" href="#comment-collapse-@form.Id">Meer reacties weergeven</div>
                    }
                </div>
            </div>
        </div>
    }
</div>